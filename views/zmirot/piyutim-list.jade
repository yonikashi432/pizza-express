doctype html
html(lang='he')
  head
    meta(charset='utf-8')
    meta(name='viewport', content='width=device-width, initial-scale=1')
    title= title + ' - 专转'
    style.
      * { margin: 0; padding: 0; box-sizing: border-box; }
      body { 
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        background: linear-gradient(135deg, #1a3a52 0%, #2d5a7b 100%);
        color: #f0f0f0;
        min-height: 100vh;
        direction: rtl;
        padding: 20px;
      }
      
      .container { max-width: 1200px; margin: 0 auto; }
      
      header {
        text-align: center;
        margin-bottom: 30px;
        padding: 20px;
        background: rgba(0, 0, 0, 0.3);
        border-radius: 10px;
        border-top: 4px solid #ffd700;
      }
      
      h1 { font-size: 2em; margin-bottom: 10px; }
      
      .piyutim-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(350px, 1fr));
        gap: 20px;
        margin-top: 30px;
      }
      
      .piyut-card {
        background: rgba(0, 0, 0, 0.4);
        padding: 20px;
        border-radius: 8px;
        border-left: 4px solid #ffd700;
        transition: all 0.3s;
        cursor: pointer;
      }
      
      .piyut-card:hover {
        background: rgba(0, 0, 0, 0.5);
        transform: translateY(-3px);
      }
      
      .piyut-title {
        font-size: 1.3em;
        color: #ffd700;
        margin-bottom: 10px;
      }
      
      .piyut-author {
        font-size: 0.9em;
        color: #aaa;
        margin-bottom: 10px;
      }
      
      .piyut-excerpt {
        color: #ddd;
        line-height: 1.5;
        margin-bottom: 15px;
        max-height: 80px;
        overflow: hidden;
        text-overflow: ellipsis;
      }
      
      .piyut-stats {
        display: flex;
        justify-content: space-between;
        font-size: 0.9em;
        color: #aaa;
        padding-top: 15px;
        border-top: 1px solid rgba(255, 215, 0, 0.2);
      }
      
      .score-badge {
        background: rgba(255, 215, 0, 0.2);
        color: #ffd700;
        padding: 5px 10px;
        border-radius: 3px;
      }
      
      .tier-badge {
        background: rgba(100, 150, 200, 0.3);
        color: #64b3d5;
        padding: 5px 10px;
        border-radius: 3px;
        margin-right: 10px;
      }
      
      .no-piyutim {
        text-align: center;
        padding: 40px 20px;
        color: #aaa;
      }

  body
    .container
      header
        h1  专转 砖
        p 住驻专 拽砖   转专转 拽, 转 专状,  砖 砖
      
      if piyutim && piyutim.length > 0
        .piyutim-grid
          each piyut in piyutim
            a.piyut-card(href='/piyutim/' + piyut.id)
              .piyut-title= piyut.title
              .piyut-author 注 : 
                span= piyut.authorId.slice(0, 8)
              .piyut-excerpt= piyut.text.slice(0, 150) + '...'
              
              .piyut-stats
                span
                  if piyut.tier > 0
                    .tier-badge
                      span Tier 
                      = piyut.tier
                span.score-badge
                  span 拽: 
                  = piyut.score
                span
                  span 转: 
                  = piyut.supporters.length
      else
        .no-piyutim
          p  专转 注.  专砖 砖转祝 专!
